{
    "name": "qm-monorepo",
    "private": true,
    "version": "0.0.0",
    "scripts": {
        "build": "turbo run build",
        "build:lib": "turbo run build:lib",
        "dev": "turbo run dev",
        "lint": "turbo run lint",
        "test": "turbo run test",
        "test:coverage": "turbo run test:coverage",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "commit": "czg",
        "prepare": "husky",
        "migrator": "sass-migrator module packages/**/*.scss",
        "deps:check": "pnpm list --depth=2 | grep -E 'vue|vite|nuxt'",
        "deps:audit": "pnpm audit --prod",
        "deps:verify": "pnpm list --recursive --depth=0 && echo '✅ 所有依赖验证成功'"
    },
    "devDependencies": {
        "sass-migrator": "catalog:",
        "@changesets/cli": "catalog:",
        "@quantum-design-configs/eslint": "workspace:*",
        "@quantum-design-configs/commitlint": "workspace:*",
        "@quantum-design-configs/tsconfig": "workspace:*",
        "@types/node": "catalog:",
        "@vitest/coverage-v8": "catalog:",
        "@vitest/ui": "catalog:",
        "lint-staged": "catalog:",
        "husky": "catalog:",
        "jsdom": "catalog:",
        "tslib": "catalog:",
        "turbo": "catalog:",
        "typescript": "catalog:",
        "vite": "catalog:",
        "vitest": "catalog:"
    },
    "packageManager": "pnpm@10.10.0",
    "engines": {
        "npm": ">=8.0.0",
        "node": ">=18.0.0"
    },
    "pnpm": {
        "overrides": {
            "eslint": "~8.57.1"
        },
        "peerDependencyRules": {
            "ignoreMissing": [
                "@types/*"
            ],
            "allowedVersions": {
                "vue": "^3.5.0",
                "vue-router": "^4.5.0",
                "vite": "^6.3.5"
            }
        }
    },
    "volta": {
        "node": "20.18.1",
        "pnpm": "10.10.0"
    }
}
