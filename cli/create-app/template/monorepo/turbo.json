{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build:lib": {
        "dependsOn": ["^build"],
        "outputs": ["dist/**","dist-components/**", ".next/**"]
    },
    "build": {
        "dependsOn": ["^build"],
        "outputs": ["dist/**", ".next/**", "./nuxt/**", "./output/**"]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
