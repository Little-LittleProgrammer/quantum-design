{   
    "extends": "./tsconfig-base.json",
    "display": "Vue",
    "compilerOptions": {
      "target": "ES2015",
      "allowSyntheticDefaultImports": true,
      "strictFunctionTypes": false,
      "resolveJsonModule": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "experimentalDecorators": true,
      "removeComments": true,
      "declaration": false
    }
  }
  